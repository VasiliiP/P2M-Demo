@model TestRequestViewModel

<div class="container">
  <h2>Test API</h2>
  <form asp-action="Test" method="POST">
    <div class="form-group">
      <label asp-for="GlobalUid"></label>
      <input asp-for="GlobalUid" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="P"></label>
      <input asp-for="P" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="G"></label>
      <input asp-for="G" value="fe30d390-a5f8-11e5-a5a3-04018dd69601" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="H"></label>
      <input asp-for="H" class="form-control" value="@Model.H">
    </div>
    <button type="submit" class="btn btn-default">Compute Hash</button>
  </form>

  <a asp-controller="Order" 
     asp-action="Index" 
     asp-route-id="@Model.GlobalUid"
     asp-route-p="@Model.P"
     asp-route-g="@Model.G"
     asp-route-h="@Model.H" >@Html.Raw(ViewBag.Href)</a>
</div>